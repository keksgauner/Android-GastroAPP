<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Abrechnung">

    <ScrollView
        android:id="@+id/bestellenScrollView"
        android:layout_width="417dp"
        android:layout_height="596dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/abrechnungLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/abrechnungTableInvoices"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textAbrechnung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/buttonAbrechnungSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bestellenScrollView" />

    <Button
        android:id="@+id/buttonAbrechnungSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="So Speichern"
        app:layout_constraintBottom_toTopOf="@+id/buttonAbrechnungFinihed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bestellenScrollView" />

    <Button
        android:id="@+id/buttonAbrechnungFinihed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alles Bezahlt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>